{
  "name": "liqui-moly-chatbot",
  "version": "1.0.0",
  "description": "LIQUI MOLY Taiwan AI Chatbot",
  "main": "api/chat.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lib": "jest lib/"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": ".reports/coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.test.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true
  },
  "keywords": [
    "chatbot",
    "liqui-moly",
    "ai",
    "vercel"
  ],
  "license": "UNLICENSED",
  "private": true
}
